<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:padding="20dp">
    <me.tom.knife.SearchEditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Search"
        app:clearIcon="@mipmap/clear"
        app:clearIconWidth="@dimen/clear_edit_text_clear_icon_width"
        app:clearIconHeight="@dimen/clear_edit_text_clear_icon_height"
        app:searchIcon="@mipmap/search"
        app:searchIconWidth="@dimen/search_edit_text_icon_width"
        app:searchIconHeight="@dimen/search_edit_text_icon_height"/>
</LinearLayout>