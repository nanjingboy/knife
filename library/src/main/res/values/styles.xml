<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClearEditText">
        <attr name="clearIcon" format="reference"/>
        <attr name="clearIconWidth" format="dimension|reference"/>
        <attr name="clearIconHeight" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="SearchEditText">
        <attr name="searchIcon" format="reference"/>
        <attr name="searchIconWidth" format="dimension|reference"/>
        <attr name="searchIconHeight" format="dimension|reference"/>
